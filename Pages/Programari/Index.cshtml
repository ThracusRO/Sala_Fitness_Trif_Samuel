@page
@model Sala_Fitness_Trif_Samuel.Pages.Programari.IndexModel

@{
    ViewData["Title"] = "Index";
}
@*Culoare fundal*@

<h1>Programari</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<!-- Formular de cautare -->
<form method="get">
    <div class="form-group">
        <input type="text" name="SearchString" value="@Model.SearchString" class="form-control"
               placeholder="Căutare după nume/prenume utilizator sau antrenor" />
        <button type="submit" class="btn btn-primary mt-2">Caută</button>
        <a asp-page="./Index" class="btn btn-secondary mt-2">Resetează</a>
    </div>
</form>
<!--End Formular cautare-->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Utilizator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Antrenor)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DataSort">
                    Data Programare
                </a>
               @* @Html.DisplayNameFor(model => model.Programare[0].DataProgramare) am anulat linia initiala pentru a face loc functionalitatii sort--> *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].DurataMinute)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Programare) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Utilizator.NumeComplet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Antrenor.NumeComplet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataProgramare)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DurataMinute)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
